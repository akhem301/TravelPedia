
<!-- Register part -->
<div style="padding: 170px 0px 100px 0px;">
    <div class="container" >
        <h1 style="color:#808080" id="myh1">Register</h1>
        <hr style="width: 100%; margin-top: 5px;"/>
        {{#if errors}}
              {{#each errors}}
                <div class="alert alert-danger">{{msg}}</div>
              {{/each}}
        {{/if}}
        <!-- checking for flash message -->
        <div class="row">
            <div class="col-lg-12">
              {{#if success_msg}}
              <div class="alert alert-success" style="width: 30%;">{{success_msg}}</div>
              {{/if}}

              {{#if error_msg}}
                <div class="alert alert-danger" style="width: 30%;">{{error_msg}}</div>
              {{/if}}

              {{#if error}}
                <div class="alert alert-danger" style="width: 30%;">{{error}}</div>
              {{/if}}
            </div>
        </div>
        <!-- //end -->
        <form method="post" action="/users/register">
           <div>
            <h4 id="myh4">Name</h4>
            <input id="inpboxR" type="text" class="form-control" placeholder="Name" name="name">
          <!-- </div> -->
          <!-- <div class="form-group"> -->
            <h4 id="myh4">Username</h4>
            <input id="inpboxR" type="text" class="form-control" placeholder="Username" name="username">
          <!-- </div> -->
           <!-- <div class="form-group"> -->
            <h4 id="myh4">Email</h4>
            <input id="inpboxR" type="email" class="form-control" placeholder="Email" name="email">
          <!-- </div> -->
          <!-- <div class="form-group"> -->
            <h4 id="myh4">Password</h4>
            <input id="inpboxR" type="password" class="form-control" placeholder="Password" name="password">
          <!-- </div> -->
          <!-- <div class="form-group"> -->
            <h4 id="myh4">Confirm Password</h4>
            <input id="inpboxR" type="password" class="form-control" placeholder="Password" name="password2">
          </div>
          <button style="margin-top: 25px;" type="submit" class="newbtn2">Submit</button>
        </form>
        <!-- //end -->
    </div>
    </div>
</div>
